
<!--=====HEAD======-->

<%- include('../partials/head') %>

<!--=====BODY=====-->

<body>
  <link rel="stylesheet" href="/stylesheets/contact.css">

  <%- include('../partials/headerwhite') %>
    
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6" style="margin-top: 5rem;">
                    <h1><%=title %></h1>
                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="nameTextField">Contact Name</label>
                            <input type="text" class="form-control"
                            id="nameTextField"
                            placeholder="Enter name"
                            name="name"
                            value="<%= business.name %>"
                            required>
                        </div>
        
                        <div class="form-group">
                            <label for="authorTextField">Email</label>
                            <input type="email" class="form-control"
                            id="emailTextField"
                            placeholder="Enter email"
                            name="email" 
                            value="<%= business.email %>"
                            required>
                        </div>
        
        
                        <div class="form-group">
                            <label for="publishedTextField">Contact Number</label>
                            <input type="number" class="form-control"
                            id="priceTextField"
                            placeholder="Enter phone number"
                            name="number" 
                            value="<%= business.mobile %>"
                            required>
                        </div>
        
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-edit"></i> Submit</button>
                            
                            
                            <a href="/business-contact" class="btn btn-warning">
                                <i class="fas fa-undo"></i>Cancel</a>
                    </form>
                    </div>
                </div>
        </div>
    </section>
    
    <!--=====FOOTER======-->
  
    <%- include('../partials/footer') %>

</body>
</html>